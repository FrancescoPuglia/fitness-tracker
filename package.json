{
  "name": "fitness-tracker",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "//-- Tests base --//": "",
    "test": "vitest run --reporter=verbose --coverage",
    "test:watch": "vitest",
    "test:unit": "vitest run -t unit --reporter=verbose --coverage",
    "test:int": "vitest run -t int --reporter=verbose",
    "test:a11y:unit": "vitest run -t a11y",
    "test:schema": "vitest run -t schema",
    "//-- E2E & PWA --//": "",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:mobile": "playwright test --config=playwright.mobile.config.ts",
    "e2e:offline": "playwright test -g '@offline'",
    "pwa:audit": "lhci autorun",
    "//-- Smoke & All-in-one --//": "",
    "smoke": "run-s build test:unit e2e:pwa-min",
    "e2e:pwa-min": "playwright test -g '@smoke'",
    "//-- Lint & format --//": "",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "vitest related --run --coverage=false",
      "prettier --write"
    ]
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "c8": "^10.1.3",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "fake-indexeddb": "^6.2.2",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.2",
    "lint-staged": "^15.5.2",
    "msw": "^2.11.2",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^4.5.14",
    "vitest": "^3.2.4",
    "zod": "^4.1.7"
  }
}
